set_sysctl_param()
	{
	PARAM=$1
	DESIRED=$2

	if [ "x$(sysctl -e -n $PARAM)" != "x$DESIRED" ]; then
		sysctl  -w $PARAM=$DESIRED
		[ $? -eq 0 ] || echo "sysctl -w $PARAM=$DESIRED failed"
	fi

	grep -q "^$PARAM\s*=\s*$DESIRED$" /etc/sysctl.conf && exit 0

	grep -q "^$PARAM" /etc/sysctl.conf
	if [ $? -eq 0 ]; then
		sed -i -e "s/^$PARAM.*$/$PARAM = $DESIRED/"       /etc/sysctl.conf
	else
		echo ""                                        >> /etc/sysctl.conf
		echo "# Added by $(basename $0) on $(date -u)" >> /etc/sysctl.conf
		echo "$PARAM = $DESIRED"                       >> /etc/sysctl.conf
	fi

	grep -q "^$PARAM\s*=\s*$DESIRED$" /etc/sysctl.conf || echo "editing /etc/sysctl.conf for $PARAM  failed"
	}
