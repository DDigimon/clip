FILE=/etc/avahi/avahi-daemon.conf

# Common function for setting avahi-daemon.conf entries
# - $ENTRY contains the appropriate name to add to the conf file
# - $OPTION contains the value (yes/no) to set the line
# - $SECTION is the section that this line should appear in
function add_section_entry() {
	ENTRY=$1
	OPTION=$2
	SECTION=$3

	[ -f $FILE ] || exit 1

	sed -i -r -e "s/(\s*)(\#*)(\s*)($ENTRY)(=.*)/\3\4=$OPTION/g" $FILE
	echo $LINE
	COUNT=$( grep -Ec "$ENTRY\=.*" $FILE )

	if [ $COUNT -eq 0 ]
	then
		SECTIONLINE=$( grep -n "^\[$SECTION\]" $FILE )
		SECTIONLINE=${SECTIONLINE%":[$SECTION]"}
		
		sed -i -r -e "${SECTIONLINE}a\
		$ENTRY=$OPTION" $FILE
	fi
}
